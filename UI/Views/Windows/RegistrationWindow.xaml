<Window x:Class="ThesisProjectARM.UI.Views.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisProjectARM.UI.Views.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UsernameTextBox" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Username" />
        <PasswordBox x:Name="PasswordBox" Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Password" />
        <CheckBox x:Name="IsAdminCheckBox" IsChecked="{Binding IsAdmin, UpdateSourceTrigger=PropertyChanged}" Content="Is Admin" />
        <Button Content="Register" Command="{Binding RegisterCommand}" />
    </Grid>
</Window>
