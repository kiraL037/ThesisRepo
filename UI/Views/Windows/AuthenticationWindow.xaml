<Window x:Class="ThesisProjectARM.UI.Views.Windows.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisProjectARM.UI.Views.Windows"
        mc:Ignorable="d"
        Title="AuthenticationWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="296,102,296,102" Grid.ColumnSpan="2" Width="209">
            <Label Content="Логин" HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox x:Name="UsernameTextBox" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="10" />

            <Label Content="Пароль" HorizontalAlignment="Center" Margin="0,5,0,5"/>
            <PasswordBox x:Name="PasswordBox" Password="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Margin="10" />
        <Button Content="Login" Command="{Binding AuthenticateCommand}" Margin="10" />
        </StackPanel>
    </Grid>
</Window>
