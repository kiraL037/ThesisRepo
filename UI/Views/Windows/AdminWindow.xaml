<Window x:Class="ThesisProjectARM.UI.Views.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThesisProjectARM.UI.Views.Windows"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите данные менеджера:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0"/>
            <TextBlock Text="Пользователь" />
            <TextBox x:Name="AdminUsernameTextBox" Width="300" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="AdminPasswordBox" Width="300" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40,0,0"/>
            <Button Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,20,20" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
