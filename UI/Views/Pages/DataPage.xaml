<Page x:Class="ThesisProjectARM.UI.Views.Pages.DataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ThesisProjectARM.UI.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataPage">

    <Grid>
        <DataGrid ItemsSource="{Binding DataRows}" AutoGenerateColumns="True" Margin="0,0,0,63"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,392,0,0" Width="780">
            <Button Content="Добавть" Click="AddData_Click" Margin="5" Padding="10"/>
            <Button Content="Обновить" Click="UpdateData_Click" Margin="5" Padding="10"/>
            <Button Content="Удалить" Click="DeleteData_Click" Margin="5" Padding="10"/>
            <Button Content="График" Click="VisualizeData_Click" Margin="5" Padding="10"/>
            <Button Content="Заполнить пустые места" Command="{Binding FillMissingValuesCommand}" />
            <Button Content="Убрать дупликаты" Command="{Binding RemoveDuplicatesCommand}" />
            <Button Content="Нормализовать данные" Command="{Binding NormalizeDataCommand}" />
        </StackPanel>
    </Grid>
</Page>
